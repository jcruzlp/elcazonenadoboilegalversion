{% block javascripts %}
    <script>
        const ctx = document.getElementById('skillsRadar').getContext('2d');

        new Chart(ctx, {
            type: 'radar',
            data: {
                labels: [
                    'Java (Spring, Hibernate)',
                    'RESTful APIs & Microservices',
                    'SQL / NoSQL Databases',
                    'Version Control (Git)',
                    'Unit Testing & CI/CD'
                ],
                datasets: [{
                    label: 'Skill Levels',
                    data: [102, 95, 100, 97, 105], // some >100 (green), some <100 (red)
                    fill: true,
                    backgroundColor: 'rgba(0, 128, 0, 0.2)',
                    borderColor: 'green',
                    pointBackgroundColor: function(ctx) {
                        const value = ctx.raw;
                        if (value > 100) return 'green';
                        if (value < 100) return 'red';
                        return 'gray';
                    },
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: function(ctx) {
                        const value = ctx.raw;
                        if (value > 100) return 'green';
                        if (value < 100) return 'red';
                        return 'gray';
                    }
                }]
            },
            options: {
                responsive: true,
                scales: {
                    r: {
                        min: 80,
                        max: 110,
                        ticks: {
                            stepSize: 5,
                            callback: value => value + '%'
                        }
                    }
                }
            }
        });
    </script>
